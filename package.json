{
  "name": "bbqpi-server",
  "version": "1.0.1",
  "description": "A node and firebase based service to install on a Raspberry Pi for controlling a charcoal bbq fan blower and temperature sensors.",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --coverage && codecov",
    "posttest": "eslint src && stryker run stryker.conf.js",
    "stryker": "stryker run stryker.conf.js",
    "jest": "jest --watch",
    "semantic-release": "semantic-release",
    "update": "rm -rf node_modules && rm package-lock.json && ncu -a && npm install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mshogren/bbqpi-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/bbqpi-server/issues"
  },
  "homepage": "https://github.com/mshogren/bbqpi-server#readme",
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "firebase": "^5.6.0",
    "jfs": "^0.3.0",
    "lockfile": "^1.0.4",
    "mcp-spi-adc": "^2.0.4",
    "pi-gpioutil": "0.0.3",
    "request": "^2.88.0",
    "web-push": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/git": "^7.0.5",
    "codecov": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "semantic-release": "^15.12.4",
    "stryker": "^0.33.1",
    "stryker-api": "^0.22.0",
    "stryker-javascript-mutator": "^0.12.1",
    "stryker-jest-runner": "^1.2.9"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/.stryker-tmp/"
    ],
    "testURL": "http://localhost/"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "npmPublish": false,
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
