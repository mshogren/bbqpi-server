{
  "name": "bbqpi-server",
  "version": "0.0.0-development",
  "description": "A node and firebase based service to install on a Raspberry Pi for controlling a charcoal bbq fan blower and temperature sensors.",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --coverage && codecov",
    "posttest": "eslint src && stryker run stryker.conf.js",
    "stryker": "stryker run stryker.conf.js",
    "jest": "jest --watch",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mshogren/bbqpi-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/bbqpi-server/issues"
  },
  "homepage": "https://github.com/mshogren/bbqpi-server#readme",
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "firebase": "^4.12.1",
    "jfs": "^0.3.0",
    "lockfile": "^1.0.3",
    "mcp-spi-adc": "^2.0.1",
    "pi-gpioutil": "0.0.3",
    "request": "^2.85.0",
    "web-push": "^3.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@semantic-release/git": "^4.0.1",
    "codecov": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.10.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1",
    "semantic-release": "^15.1.5",
    "stryker": "^0.21.1",
    "stryker-api": "^0.15.0",
    "stryker-javascript-mutator": "^0.5.0",
    "stryker-jest-runner": "^0.6.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/.stryker-tmp/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "prepare": [
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
