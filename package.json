{
  "name": "bbqpi-server",
  "version": "1.0.0",
  "description": "A node and firebase based service to install on a Raspberry Pi for controlling a charcoal bbq fan blower and temperature sensors.",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --coverage && codecov",
    "posttest": "eslint src && stryker run stryker.conf.js",
    "stryker": "stryker run stryker.conf.js",
    "jest": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshogren/bbqpi-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/bbqpi-server/issues"
  },
  "homepage": "https://github.com/mshogren/bbqpi-server#readme",
  "dependencies": {
    "firebase": "^4.3.1",
    "jfs": "^0.2.6",
    "mcp-spi-adc": "^0.4.0",
    "pi-gpioutil": "0.0.3",
    "request": "^2.79.0",
    "web-push": "^3.2.3"
  },
  "devDependencies": {
    "codecov": "^2.3.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "stryker": "^0.9.3",
    "stryker-api": "^0.8.0",
    "stryker-jest-runner": "^0.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/.stryker-tmp/"
    ]
  }
}
