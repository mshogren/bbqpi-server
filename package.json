{
  "name": "bbqpi-server",
  "version": "1.2.0",
  "description": "A node and firebase based service to install on a Raspberry Pi for controlling a charcoal bbq fan blower and temperature sensors.",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --coverage && codecov",
    "posttest": "eslint src && stryker run stryker.conf.js",
    "stryker": "stryker run stryker.conf.js",
    "jest": "jest --watch",
    "semantic-release": "semantic-release",
    "update": "rm -rf node_modules && rm package-lock.json && ncu -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mshogren/bbqpi-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/bbqpi-server/issues"
  },
  "homepage": "https://github.com/mshogren/bbqpi-server#readme",
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "dnssd": "^0.4.1",
    "firebase": "^7.12.0",
    "jfs": "^0.3.0",
    "lockfile": "^1.0.4",
    "mcp-spi-adc": "^3.0.0",
    "pi-gpioutil": "0.0.3",
    "request": "^2.88.2",
    "web-push": "^3.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/git": "^9.0.0",
    "@stryker-mutator/core": "^3.2.4",
    "@stryker-mutator/javascript-mutator": "^3.0.2",
    "@stryker-mutator/jest-runner": "^3.0.2",
    "codecov": "^3.6.5",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-cli": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "semantic-release": "^17.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/.stryker-tmp/"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost/"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "npmPublish": false,
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
