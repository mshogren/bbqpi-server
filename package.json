{
  "name": "bbqpi-server",
  "version": "1.0.0",
  "description": "A node and firebase based service to install on a Raspberry Pi for controlling a charcoal bbq fan blower and temperature sensors.",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --coverage && codecov",
    "posttest": "eslint src && stryker run stryker.conf.js",
    "stryker": "stryker run stryker.conf.js",
    "jest": "jest --watch",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshogren/bbqpi-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/bbqpi-server/issues"
  },
  "homepage": "https://github.com/mshogren/bbqpi-server#readme",
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "firebase": "^4.8.1",
    "jfs": "^0.3.0",
    "lockfile": "^1.0.3",
    "mcp-spi-adc": "^1.0.0",
    "pi-gpioutil": "0.0.3",
    "request": "^2.83.0",
    "web-push": "^3.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.6",
    "@commitlint/config-conventional": "^5.2.3",
    "codecov": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "stryker": "^0.17.0",
    "stryker-api": "^0.12.0",
    "stryker-javascript-mutator": "^0.3.1",
    "stryker-jest-runner": "^0.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/.stryker-tmp/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
